//串的模式匹配算法 
//KMP算法 
#include<iostream>
#include<cstring>
#define N 100
int next[N];
using namespace std;
void get_next(string t,int next[]);
int Index(string s,string t,int pos);
int main(){
	string s,t;
	cin>>s>>t;
	int pos=0;
	get_next(t,next);
	cout<<Index(s,t,pos)<<endl;
	return 0;
}
int Index(string s,string t,int pos){
	int i=pos,j=0;
	while(i<s.length()||j<t.length()){
		if(s[i]==t[j]){
			++i,++j;
		}
		else {
			j=next[j];
		}
	}
	if(j==t.length()){
		return i-t.length();
	}
	else
	return 0;
}
void get_next(string t,int next[]){
	int i=0;next[i]=0;
	int j=0;
	while(i<t.length()){
		if(j==0||t[i]==t[j]){
			++i;++j;next[i]=j;
		}
		else
		j=next[j];
	}
}
